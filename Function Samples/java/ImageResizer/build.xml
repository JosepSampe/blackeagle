<project>
	
	<target name="clean">
		<delete dir="bin" />
		<mkdir dir="bin" />
	</target>

	<target name="compile">
		<javac srcdir="src/com/urv/blackeagle/function/imageresizer/" destdir="bin" includeantruntime="false">
			<classpath>
		        <pathelement 
		        	path="../blackeagle-runtime-1.0.jar"/>
				<pathelement 
					path="lib/json-simple-1.1.1.jar"/>
			</classpath>		
		</javac>
	    <jar destfile="bin/image-resizer-1.0.jar" 
	        basedir="bin"
	     	includes="com/urv/blackeagle/function/imageresizer/*">
	    </jar>
	</target>
	
	<target name="build" depends="clean, compile"/>

</project>